@using AppCoreLite.Enums;
@model MVC.Models.DirectoryModel

@{
    ViewData["Title"] = "Ders İçerikleri";
}
<h3>
    Ders İçerikleri
</h3>
<div class="container-fluid" style="height:600px">
    <div id="header" class="row"></div>
    <div class="row" style="height:600px">
        <div class="col-4 " style="height:600px">
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="searchText" placeholder="Serach Code" aria-label="Serach Code" aria-describedby="basic-addon2">
                    </div>
                </div>
            </div>
            <div class="row ">
                <div id="alerts"></div>
                <div id="Search" class="col scroolab" style="height:450px; display: none;"></div>
                <div id="Hierarchy" class="col scroolab" style="height:450px">
                    <ul id="DirectoryHierarchy">
                        @await Html.PartialAsync("DirectoryEntityPartial", Model)
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-8" style="height:600px" id="content">
        </div>
    </div>
</div>
@if (ViewBag.isAdmin)
{
    <input type="file" id="FileUpload1" style="display: none;" multiple />
    <script type="module">
        (async ({ chrome, netscape }) => {

            // add Safari polyfill if needed
            if (!chrome && !netscape)
                import("/lib/highlight.js/custom-elements.min.js");
            // import { HighlightedCode } from "~/lib/highlight.js/highlighted-code.min.js";
            const { default: HighlightedCode } =
                import("/lib/highlight.js/highlighted-code.min.js");

            // bootstrap a theme through one of these names
            // https://github.com/highlightjs/highlight.js/tree/main/src/styles
            // HighlightedCode.useTheme('github-dark');
        })(self);
    </script>

}


@section Scripts
    {
    <link href="~/css/pagelevel/fileindex.css" rel="stylesheet" />
    <link href="~/lib/highlight.js/styles/vs2015.min.css" rel="stylesheet" />
    <script src="~/lib/highlight.js/highlight.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Clipboard.js"></script>

    <script src="~/js/pagelevel/fileindex.js"></script>
    @if (ViewBag.isAdmin)
    {
        <link href="~/lib/jquery-contextmenu/jquery.contextmenu.min.css" rel="stylesheet" />
        <script src="~/lib/jquery-contextmenu/jquery.contextmenu.min.js"></script>
        <script src="~/lib/jquery-contextmenu/jquery.ui.position.min.js"></script>
        <script src="~/js/pagelevel/fileindexadmin.js"></script>
    }
    }
